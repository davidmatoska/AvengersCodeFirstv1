@model Avengers.Models.Incident

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Incident</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Incident_Motif.Motif)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Incident_Motif.Motif)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Pays.Pays_nom)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Pays.Pays_nom)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Contexte)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Contexte)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Adresse)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Adresse)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Date_Incident)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date_Incident)
        </dd>
        @if (Model.Incident_Motif.Files.Any(f => f.FileType == FileType.Photo))
        {
            <dt>
                Symbole
            </dt>
            <dd>
                <img src="~/File?id=@Model.Incident_Motif.Files.First(f => f.FileType == FileType.Photo).FileId" height="50" width="50" alt="symbole" />
            </dd>
        }
        @if (Model.Files.Any(f => f.FileType == FileType.Photo))
        {
            <dt>
                Photo de l'incident
            </dt>
            <dd>
                <img src="~/File?id=@Model.Files.First(f => f.FileType == FileType.Photo).FileId" height="150" width="150" alt="photo" />
            </dd>
        }

    </dl>
</div>
