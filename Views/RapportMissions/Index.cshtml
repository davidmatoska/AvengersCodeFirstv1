@model IEnumerable<Avengers.Models.RapportMission>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MissionID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HerosID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CommentaireMission)
        </th>
        <th>
            Preuve de la résolution de l'incident
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateRapport)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MissionID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HerosID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CommentaireMission)
        </td>
        <td>
            <img src="~/File?id=@item.Files.First(f => f.FileType == Avengers.Models.FileType.Preuve).FileId" height="150" width="150" alt="preuve" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateRapport)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RapportMissionID }) |
            @Html.ActionLink("Details", "Details", new { id=item.RapportMissionID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RapportMissionID })
        </td>
    </tr>
}

</table>
