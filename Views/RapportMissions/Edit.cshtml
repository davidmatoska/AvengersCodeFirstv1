@model Avengers.Models.RapportMission

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm("Edit", "Student", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>RapportMission</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.RapportMissionID)

    <div class="form-group">
        @Html.LabelFor(model => model.MissionID, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.MissionID, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MissionID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.HerosID, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.HerosID, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.HerosID, "", new { @class = "text-danger" })
        </div>
    </div>

    @if (Model.Files.Any(f => f.FileType == FileType.Preuve))
    {
        <div class="form-group">
            <span class="control-label col-md-2"><strong>Preuve de la résolution</strong></span>
            <div class="col-md-10">
                <img src="~/File?id=@Model.Files.First(f => f.FileType == FileType.Preuve).FileId" alt="preuve" />
            </div>
        </div>
    }

    <div class="form-group">
        @Html.Label("Modifier", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="file" id="Preuve" name="upload" />
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CommentaireMission, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.CommentaireMission, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CommentaireMission, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DateRapport, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DateRapport, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DateRapport, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
